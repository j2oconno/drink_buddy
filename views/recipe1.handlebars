<!-- START BANNER -->
<div class="jumbotron">
  <div class="container">
    <p class="ChooseHead">Recipes for {{mood}}</p>
  </div>
</div>
<!-- END BANNER -->


<!-- START DRINK RECIPE BOXES-->
<div class="container">
  <div class="row"> 
      {{#each drink}}
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
          <div class="frontbox">
          <a href="/mood/{{../mood}}/{{name}}">
            <div class="frontcontent">
                  <img src="{{image}}" class = "img-responsive img-rounded">
          </a>
          <h4>{{name}}</h4>
        </div></div></div>
      {{/each}}
  </div>
</div>
<!-- END DRINK RECIPE BOXES -->

