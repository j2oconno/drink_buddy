  <body>

<!-- NAVIGATION BAR -->


  <nav class="navbar navbar-default">
    <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
     <div class="navbar-header">
        <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home"></span><span class="sr-only">(current)</span></a>
            <form id="search-bar" class="navbar-form pull-left" role="search" action="/search">
            <div class="input-group">
               <input name= "input" id="input" type="text" class="form-control" placeholder="Search">
               <div class="input-group-btn">
                  <button id="searchButton" value="Submit" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
               </div>
            </div>
         </form>
      
      <ul class="nav navbar-nav navbar-right pull-right" style="padding-right:20px;">
        <li><a href="login.html"> Sign In</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- END NAVIGATION BAR -->



<!-- START MENU BOXES-->
<div class="container-fluid square-container center">
      <div><h1 class="MainLogo">DrinkBuddy</h1></div>
      <div><h3 class="ChooseHead">Choose a Recipe:</h3></div>
      <div class="center" class="row"> 
        {{#each by_what}}
          <div class="col-xs-6 col-md-6 col-lg-6">
              <div class="square-box">
                <a href="/{{link}}">
                  <p style="color:black" class="mood-name">{{name}}</p>
                  <div class="overlay center">
                    <div class="square-content">
                        <img src="{{image}}" width="134px" height="134px"/>
<!--                         <p class="mood-name">{{name}}</p> -->
                    </div>
                  </div>
                </a>
              </div>
          </div>

<!--         <a href="/{{link}}">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6" >
            <img src="{{image}}" width="180px" height="180px"/>
              <p class='mood-name'>{{ name }}</p>
          </div>
        </a> -->
        {{/each}}
      </div>
</div>

<!-- END MENU BOXES-->


