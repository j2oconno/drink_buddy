<div class="container">
      <div><h1 class="MainLogo">DrinkBuddy</h1></div>
      <div><h3 class="ChooseHead">Find a Recipe:</h3></div>

      <div class="row"> 
        {{#each by_what}}
          <div class="col-xs-6">
              <div class='square-box'>
                <a href="/{{id}}">
                <div class='square-content'>
                  <div><span>{{name}}</span></div>
                </div>
               </a>
              </div>
          </div>
        {{/each}}

<!-- Favorite's box -->
          <div class="col-xs-6">
              <div class='square-box'>
                <a href="/favorite">
                <div class='square-content'>
                  <div><span>your favorites</span></div>
                </div>
               </a>
              </div>
          </div>
      </div>
    </div>
</div>

