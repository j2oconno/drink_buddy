<div class="container center">
      <p style="font-family:FrontBoxFont; font-size:30pt; text-align:center;">{{name}} Recipe</p>
          <div class="row center">
              <div class="col-xs-12 imagerecipe">
              	<div class="row center">
                  <img class="img-responsive center" src="{{image}}" width="250px"/>
                </div>
                <div class="row center">
                  <div class="btn-group-xs fave_button center" role="group">
                      <a href="/add/{{name}}" type="button" class="btn btn-default" role="group">Add to Favorites</a>
                  </div>
                </div>
              </div>
          </div>
</div> <!-- container-->

<div class="container center">
    <div class="row center">
        <p class="container-ingredients">INGREDIENTS</p>
          <ol class="ingredients">
            {{#each ingredients}}
              <li>{{ingre}}</li>
            {{/each}}
          </ol>
    </div>
  <div class="row center">
        <p class="container-directions">DIRECTIONS</p>
          <ol>
            {{#each directions}}
              <li>{{dir}}</li>
            {{/each}}
          </ol>
  </div>
</div>


