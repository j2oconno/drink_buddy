    	<!-- Bootstrap -->
    	<link href="/css/bootstrap.min.css" rel="stylesheet">
    	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
    	<link href="/css/stylesheet.css" rel="stylesheet">

    	<title>Drink Buddy - {{name}} Recipe</title>
      {{> tracking_code_script}}
</head>

<body>


<!-- NAVIGATION BAR -->

  <nav class="navbar navbar-default">
    <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
     <div class="navbar-header">
        <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home"></span><span class="sr-only">(current)</span></a>
            <form id="search-bar" class="navbar-form pull-left" role="search" action="/search">
            <div class="input-group">
               <input name= "input" id="input" type="text" class="form-control" placeholder="Search">
               <div class="input-group-btn">
                  <button id="searchButton" value="Submit" type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
               </div>
            </div>
         </form>
      
      <ul class="nav navbar-nav navbar-right pull-right" style="padding-right:20px;">
        <li><a href="/login.html"> Sign In</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- END NAVIGATION BAR -->

<div class="container-fluid center">
      <h3 class="ChooseHead"><p>{{name}} Recipe</p></h3>

        <div class="row center">
              <div class="row center">
                <div class="col-xs-12 imagerecipe">
              		<div class="row center">
                    <img class="img-responsive center" src="{{image}}" width="250px"/>
                  </div>
                  <div class="row center">
                    <div class="btn-group-xs fave_button center" role="group">
                          <a href="/add/{{name}}" type="button" class="btn btn-default" role="group">Add to Favorites</a>
                    </div>
                  </div>
              	</div>
              </div>

              <div class="row center">
                <div class="col-xs-12 center">
              		<h5>INGREDIENTS</h5>
              			<ol class="ingredients">
              				{{#each ingredients}}
              					<li>{{ingre}}</li>
              					 {{/each}}
                    </ol>
              		<h5>DIRECTIONS</h5>
              			<ol class="directions">
              				{{#each directions}}
              					 <li>{{dir}}</li>
              				{{/each}}
                   </ol>
                </div>
              </div>
        </div>
</div>



<div class="container-fluid center">
				<h3>Other drinks you may like</h3>


      <div class="row center">
            <div class="col-xs-4 col-xs-4 col-xs-4 center">
