    	<title>Mood Board</title>
    </head>

<body>
  <div class="moodbackground">



<!-- NAVIGATION BAR -->


  <nav class="navbar navbar-default">
    <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
     <div class="navbar-header">
        <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-home"></span><span class="sr-only">(current)</span></a>
            <form class="navbar-form pull-left" role="search">
            <div class="input-group">
               <input type="text" class="form-control" placeholder="Search">
               <div class="input-group-btn">
                  <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
               </div>
            </div>
         </form>


    <!-- Collect the nav links, forms, and other content for toggling -->
      <ul class="nav navbar-nav navbar-right pull-right" style="padding-right:20px;">
        <li><a href="login.html"> Sign In</a></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- END NAVIGATION BAR -->


<!-- START BANNER -->

<!-- END BANNER -->
<!-- START MENU BOXES-->

<div class="container-fluid">

        <div>
          <h3 class="ChooseHead">Recipes by Mood</h3>
        </div>

        <div class="row" class="center"> 
          {{#each mood}} 
                <div class="col-xs-6 col-md-6 col-md-6 col-lg-6">
                  <div class="square-box">
                    <a href="/mood/{{name}}">
                      <div class="square-content">
                        <span><h4>{{ name }}</h4></span>
                      </div>
                    </a>
                  </div>
                </div>
          {{/each}}
        </div>
</div>

<!-- END MENU BOXES -->

